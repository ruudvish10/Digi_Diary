# Explicitly set language classifications
*.py linguist-language=Python
templates/**/*.html linguist-language=HTML
static/css/**/*.css linguist-language=CSS
static/js/**/*.js linguist-language=JavaScript

# Ignore third-party files (so they don't dominate stats)
staticfiles/admin/**/* linguist-vendored
staticfiles/ckeditor/**/* linguist-vendored

# Ensure some CSS & JS are counted (but not too much)
static/css/custom_style.css linguist-detectable=true
static/js/custom_script.js linguist-detectable=true
