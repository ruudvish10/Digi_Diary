# Explicitly classify languages
*.py linguist-language=Python
templates/**/*.html linguist-language=HTML
static/**/*.css linguist-language=CSS
static/**/*.js linguist-language=JavaScript

# Ensure CSS & JS files inside 'staticfiles/admin' and 'staticfiles/ckeditor' are counted
staticfiles/admin/**/*.css linguist-detectable=true
staticfiles/admin/**/*.js linguist-detectable=true
staticfiles/ckeditor/**/*.css linguist-detectable=true
staticfiles/ckeditor/**/*.js linguist-detectable=true

# Ignore unnecessary third-party/vendor files
node_modules/**/* linguist-vendored
staticfiles/vendor/**/* linguist-vendored
static/**/*.min.js linguist-vendored
